<!-- app/views/games/scores.html.erb -->
<div class="container custom-bg-color">
  <h1 class="text-center text-white">Résultats</h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="list-group mt-4">
        <% @game.players.sort_by { |player| -player.score }.each do |player| %>
          <div class="results-container d-flex justify-content-between">
            <span class="player-name text-dark align-self-center"><%= player.name %></span>
            <span class="badge bg-secondary rounded-pill align-self-center fs-6"><%= player.score %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-grid gap-2 col-6 mx-auto mt-4">
    <button type="button" class="btn btn-primary text" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Nouvelle partie
    </button>
  </div>
</div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Nouvelle partie</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Êtes-vous sûr de vouloir démarrer une nouvelle partie ?
        </div>
        <div class="modal-footer">
          <%= link_to 'Nouvelle partie', new_game_path, class: "btn btn-primary", data: { controller: "confirm" } %>
          <button type="button" class="btn btn-secondary text-white" data-bs-dismiss="modal">Annuler</button>
        </div>
      </div>
    </div>
  </div>
</div>
